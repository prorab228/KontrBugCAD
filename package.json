{
  "name": "kontrbugcad",
  "version": "0.8.0",
  "description": "Простой 3D САПР",
  "author": "Лунев Валерий Константинович",
  "license": "UNLICENSED",
  "main": "main.js",
  "scripts": {
    "build": "node build.js",
    "start": "electron .",
    "dist": "electron-builder",
    "dist:all": "electron-builder -mwl",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "terser": "^5.0.0"
  },
  "build": {
    "appId": "com.kontrbugtech.cad",
    "productName": "КонтрБагCAD",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/.git",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{test,tests,example,examples,assets,docs}",
      "!**/*.js.map",
      "!build.js",
      "!terser.config.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}